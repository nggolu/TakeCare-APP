        android:text="ADD Message"
        android:textStyle="bold"
        android:ems="10"
        android:layout_marginLeft="0dp"
        android:id="@+id/add_msg"
        android:background="#800000"
        android:textSize="19dp"
        android:layout_alignTop="@+id/imageView4"
