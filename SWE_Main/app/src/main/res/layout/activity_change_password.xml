<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/blurr"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.goku.swe_main.ChangePassword">


    <Button
        android:text="Change password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#800000"
        android:id="@+id/changepass"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="59dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/pass"
        android:id="@+id/pass2"
        android:layout_alignTop="@+id/pass"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/pass"
        android:id="@+id/imageView"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="13dp"
        android:layout_alignBottom="@+id/cpass"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/pass"
        android:hint="New Password"
        android:layout_marginBottom="61dp"
        android:layout_above="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/cpass"
        android:hint="Confirm Passwod"
        android:layout_marginBottom="154dp"
        android:layout_above="@+id/changepass"
        android:layout_toEndOf="@+id/imageView" />
</RelativeLayout>
